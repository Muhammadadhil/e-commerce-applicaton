                fetch("/removeAddress", {
                    method: "POST",
                    headers: {
                        "content-type": "application/json;charset=utf-8",
                    },
                    body: JSON.stringify({
                        addressId,
                    }),
                }).then( async(res) => {
                    if (res.ok) {
                       await Swal.fire({
                            title: "Removed!",
                            text: "Your address is removed.",
                            icon: "success",
                        });
